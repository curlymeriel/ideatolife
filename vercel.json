{
    "rewrites": [
        {
            "source": "/__/auth/:path*",
            "destination": "https://ideatolife-meriel.firebaseapp.com/__/auth/:path*"
        }
    ],
    "headers": [
        {
            "source": "/((?!__/auth).*)",
            "headers": [
                {
                    "key": "Cross-Origin-Opener-Policy",
                    "value": "same-origin"
                },
                {
                    "key": "Cross-Origin-Embedder-Policy",
                    "value": "credentialless"
                }
            ]
        },
        {
            "source": "/__/auth/:path*",
            "headers": [
                {
                    "key": "Cross-Origin-Opener-Policy",
                    "value": "unsafe-none"
                },
                {
                    "key": "Cross-Origin-Embedder-Policy",
                    "value": "unsafe-none"
                }
            ]
        }
    ]
}